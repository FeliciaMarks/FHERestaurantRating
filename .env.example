# ============================================
# Private Restaurant Rating System
# Environment Configuration
# ============================================

# SECURITY WARNING: Never commit actual values to version control
# Copy this file to .env and fill in your actual values

# ============================================
# Network Configuration
# ============================================

# Private Key (without 0x prefix)
# Use a dedicated wallet for development/testing
PRIVATE_KEY=your_private_key_here

# Sepolia Testnet RPC URL
# Get your API key from: https://www.alchemy.com or https://www.infura.io
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key

# Zama fhEVM Devnet RPC URL (for FHE features)
ZAMA_RPC_URL=https://devnet.zama.ai

# ============================================
# Contract Verification
# ============================================

# Etherscan API Key for contract verification
# Get your API key from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key

# ============================================
# Gas Reporting & Performance
# ============================================

# Enable gas reporting in tests (true/false)
REPORT_GAS=false

# CoinMarketCap API Key for USD gas cost estimation
# Get your API key from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# ============================================
# Security & Access Control
# ============================================

# Contract Owner Address (if different from deployer)
OWNER_ADDRESS=your_owner_address

# Pauser Role Address (for emergency pause functionality)
PAUSER_ADDRESS=your_pauser_address

# Emergency Contact Email
EMERGENCY_CONTACT=security@example.com

# ============================================
# Development Settings
# ============================================

# Enable debug mode (true/false)
DEBUG=false

# Network for deployment (hardhat/localhost/sepolia/zamaDevnet)
NETWORK=hardhat

# Enable verbose logging (true/false)
VERBOSE=false

# ============================================
# CI/CD Configuration
# ============================================

# Codecov Token (for coverage reporting)
# Get from: https://codecov.io
CODECOV_TOKEN=your_codecov_token

# GitHub Token (for automated releases)
GITHUB_TOKEN=your_github_token

# ============================================
# Performance Optimization
# ============================================

# Solidity Optimizer Runs
# Higher = better for frequently called functions
# Lower = cheaper deployment
OPTIMIZER_RUNS=200

# Enable Yul Optimizer (true/false)
YUL_OPTIMIZER=true

# ============================================
# Testing Configuration
# ============================================

# Test network timeout (milliseconds)
TEST_TIMEOUT=40000

# Number of test accounts to generate
TEST_ACCOUNTS=20

# ============================================
# Rate Limiting & DoS Protection
# ============================================

# Maximum operations per block
MAX_OPS_PER_BLOCK=100

# Minimum time between operations (seconds)
MIN_OP_INTERVAL=60

# Maximum array length for loops
MAX_ARRAY_LENGTH=100
